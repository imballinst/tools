---
interface Props {
	title: string;
}

const { title } = Astro.props;
const { url } = Astro.request
const { pathname } = new URL(url)

const BASE_PATH = import.meta.env.BASE_PATH || '/'

const PATHS = [
	{
		text: "Home",
		href: BASE_PATH
	},
	{
		text: "Jira",
		href: `${BASE_PATH}jira`
	},
]

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400..700&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="bg-slate-300 px-4 py-2">
			<ul class="flex gap-x-2">
				{PATHS.map(item => (
					<li>
						<a href={item.href} class:list={[ "hover:underline", { "font-semibold": pathname === item.href } ]}>
							{item.text}
						</a>
					</li>
				))}
			</ul>
		</nav>
		<main class="p-4">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html, body {
		font-family: "Inter", sans-serif;
		font-optical-sizing: auto;
		font-weight: <weight>;
		font-style: normal;
		font-variation-settings:
			"slnt" 0;
	}

	h1 {
		@apply text-2xl font-bold mb-4;
	}

	input[type="text"], textarea {
		@apply rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6
	}

	label {
		@apply text-sm font-medium leading-6 text-gray-900;
	}
</style>